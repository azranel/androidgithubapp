<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/login_relative_layout"
    >

    <TextView android:text="@string/app_name" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/title_text_size"
        android:id="@+id/login_activity_title"
        android:paddingBottom="@dimen/login_activity_title_padding"
        android:gravity="center_vertical|center_horizontal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_text_size"
        android:text="@string/login_label"
        android:layout_below="@id/login_activity_title"
        android:id="@+id/login_activity_login_label"
        android:paddingRight="@dimen/label_right_padding"
        android:paddingBottom="@dimen/login_padding"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/login_activity_login_label"
        android:layout_below="@id/login_activity_title"
        android:id="@+id/login_activity_login_edittext"
        android:inputType="textEmailAddress"
        android:paddingBottom="@dimen/login_padding"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_text_size"
        android:text="@string/password_label"
        android:layout_below="@id/login_activity_login_label"
        android:id="@+id/login_activity_password_label"
        android:paddingRight="@dimen/label_right_padding"
        android:paddingBottom="@dimen/login_padding"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/login_activity_password_label"
        android:layout_below="@id/login_activity_login_edittext"
        android:id="@+id/login_activity_password_edittext"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/login_padding"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_label"
        android:onClick="loginToGitHub"
        android:id="@+id/login_activity_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
